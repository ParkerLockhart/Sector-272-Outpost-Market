<h1>Items for Merchant: <%= @merchant.name %></h1>

<div id="Enabled-items">
  <h3>Enabled Items</h3>
  <% @merchant.filter_item_status(1).each do |item| %>
    <%= link_to "#{item.name}", "/merchants/#{@merchant.id}/items/#{item.id}" %>
    <%= button_to "Disable" ,"/merchants/#{@merchant.id}/items/#{item.id}", method: :patch, local: true, params: {status: "disabled"} %>
  <% end  %>
</div>

<div id="Disabled-items">
  <h3>Disabled Items</h3>
  <% @merchant.filter_item_status(0).each do |item| %>
    <%= link_to "#{item.name}", "/merchants/#{@merchant.id}/items/#{item.id}" %>
    <%= button_to "Enable" ,"/merchants/#{@merchant.id}/items/#{item.id}", method: :patch, local: true, params: {status: "enabled"} %>
  <% end %>
<div>

<div id="top-items">
  <h2>Top Items</h2>
  <% @merchant.top_items.each do |item| %>
    <%= link_to "#{item.name}", "/merchants/#{@merchant.id}/items/#{item.id}" %>
    <p>-   <%= format_price(item.revenue)%>  in sales</p>
    <p>Top day for <%= item.name %> was <%= item.top_day.strftime('%m/%d/%Y') %> </p>
  <% end %>
</div>


<h3><%= link_to "Add New Item", "/merchants/#{@merchant.id}/items/new" %></h3>
